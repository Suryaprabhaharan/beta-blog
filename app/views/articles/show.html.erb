<div class="well col-xs-8 col-xs-offset-2">
	<div class="article-header">
		<div class="article-name" >
			<h2 align="left">
				<%= @article.title%>
			</h2>
		</div>
		<% if @article.categories.any? %>
			<div class="article-category" align="right"> Categories : <%= render @article.categories%></div>
		<% end %>
	</div>
	<% if @article.user %>
	<%end%>
	<div class="article-content">
		<div class="article-description">
			<%= @article.description%>
		</div>
		<div id='likedislike'>
			<%= render 'likes' , obj: @article %>
		</div>
	</div>
	<div class="article-footer">
		<div>
			<% if logged_in? and (current_user == @article.user || current_user.admin?) %>
				<%=link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-xs"%>
				<%=link_to "Delete this article", article_path(@article), method: :delete, data: {confirm:"Are you sure you want to delete the article?"}, class: "btn btn-danger btn-xs"%>
			<% end %> 
			<%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success"%>
		</div>
		<div class="author" align="right">
			Author: 
			<%= gravatar_for @article.user, size: 20 %>
			<%=link_to @article.user.username, user_path(@article.user)%>
		</div>
	</div>
	<div class="article-comments">
		<h4>Comments</h4>
		<%= render 'comments' %>
	</div>
</div>
